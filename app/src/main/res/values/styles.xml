<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blueLetraButton</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewLeftTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditTextNumber" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number|textNoSuggestions</item>
        <item name="android:digits">1234567890</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="TextViewSuccess" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/round_textview_success</item>
    </style>

    <style name="TextViewCenter" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewLeft" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewLeftNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="TextViewWhiteCenter" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewBase64" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_numbers</item>
    </style>
    <style name="TextViewCenterTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>